{
    "name": "@byungi/promise",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "tsc",
        "clean": "npx del packages/*/*.js packages/*/*.d.ts",
        "test": "npm run clean && ava",
        "publish": "yarn test && yarn build && lerna publish"
    },
    "devDependencies": {
        "ava": "^2.4.0",
        "del-cli": "^3.0.0",
        "eslint": "^6.5.1",
        "eslint-config-byungi": "^0.7.4",
        "lerna": "^3.16.4",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "packages/*/test.ts"
        ],
        "sources": [
            "packages/*/*.ts"
        ]
    }
}
