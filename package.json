{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "tsc",
        "clean": "npx del packages/*/*.js packages/*/*.d.ts",
        "test": "npm run clean && ava"
    },
    "devDependencies": {
        "ava": "^1.0.1",
        "del-cli": "^1.1.0",
        "ts-node": "^7.0.1",
        "tslint": "^5.12.0",
        "tslint-config-byungi": "^0.0.9",
        "typescript": "^3.2.2"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "packages/*/test.ts"
        ],
        "sources": [
            "packages/*/*.ts"
        ]
    }
}
