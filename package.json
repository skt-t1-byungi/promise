{
    "name": "@byungi/promise",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "tsc",
        "clean": "npx del packages/*/*.js packages/*/*.d.ts",
        "test": "npm run clean && ava",
        "publish": "yarn test && yarn build && lerna publish"
    },
    "devDependencies": {
        "ava": "^2.1.0",
        "del-cli": "^2.0.0",
        "lerna": "^3.15.0",
        "ts-node": "^8.0.3",
        "tslint": "^5.13.1",
        "tslint-config-byungi": "^0.1.1",
        "typescript": "^3.3.3333"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "packages/*/test.ts"
        ],
        "sources": [
            "packages/*/*.ts"
        ]
    }
}
